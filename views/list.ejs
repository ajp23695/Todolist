<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= kindDay %> </h1>
</div>

<div class="box">
  <% itemList.forEach(function(item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="chechbox" value="<%= item._id %>" onChange="this.form.submit()">
      <p><%= item.name %></p>
      <input type="hidden" name="listName" value="<%= kindDay %>">
    </div>
  </form>
  <% }) %>


  <div class="item">
    <form action="/" method="post">
      <input type="text" name="newItem" placeholder="To Do List Name" autocomplete="off">
      <button type="submit" name="list" value="<%= kindDay %>">+</button>
    </form>
  </div>
</div>

<%- include("footer") -%>
